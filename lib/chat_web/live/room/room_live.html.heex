
<p>currently chatting on <strong>#<%= @room_id %></strong> as <strong>@<%= @username %></strong></p>

<div id="chat-container">
    <div id="chat-messages" phx-update="prepend">
        <%= for message <- @messages do %>
        <%= display_message(assigns, message)%>
        <% end %>
    </div>
    <div id="user-list">
            <h3>users online:</h3>
            <%= for user <- @user_list do %>
                <p><%= user %></p>
            <% end %>
        </div>
</div>

<%= f = form_for :chat, "#", id: "chat-form", phx_submit: :submit_message, phx_change: :form_update %>
    <%= text_input f, :message, placeholder: "enter message..", autocomplete: "off", value: @message, required: "true" %>